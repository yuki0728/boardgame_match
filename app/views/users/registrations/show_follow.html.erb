<div>
  <h1><%= @user.username %></h1>
  <section class="stats">
      <%= render 'users/shared/stats' %>
  </section>
  <div>
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users follow">
        <% @users.each do |user| %>
          <li><%= link_to user.username, user_path(user) %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
</div>