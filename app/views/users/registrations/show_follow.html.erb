<div class="follower-box">
  <div class="follower-content center">
    <h2><%= @title %></h2>
      <% if @users.any? %>
        <ul class="users follow">
          <% @users.each do |user| %>
            <li>
              <div class="follower-users">
                <%= image_tag user.img.thumb.url ,class:"profile-icon-small" %>
                <%= link_to user.username, user_path(user) %>
              </div>
            </li>
          <% end %>
        </ul>
      <% end %>
    </div>
  </div>
</div>