<%= provide(:title, t('.forgot_your_password')) %>

<div class="userform-box">
  <div class="userform-content center">
    <h2><%= t('.forgot_your_password') %></h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render 'layouts/error_messages', model: resource %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="actions">
        <%= f.submit t('.send_me_reset_password_instructions') %>
      </div>
    <% end %>

    <%= render "users/shared/links" %>
  </div>
</div>
