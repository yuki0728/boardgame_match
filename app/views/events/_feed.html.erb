<div class="eventlist-box">
  <%= link_to event_path(event) do %>
    <div class="eventlist-name card-title">
      <%= event.name %>
    </div>
    <div class="row no-gutters">
      <div class="col-md-3 my-auto">
        <% if event.img? %>
          <%= image_tag event.img.thumb.url, class: "card-img" %>
        <% end %>
      </div>
      <div class="col-md-9">
        <div class="card-body">
          <dl class="eventlist-info">
            <dt style>
              活動時間:
              <%= render 'events/time', event: event %>
            </dt>
            <dt style>
              参加人数
              <%= event.participations.count %>
              /
              <%= event.participant_limit %>
            </dt>
          </dl>
          <div class="eventlist-text">
            <%= event.text %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <div class="eventlist-tag">
    <% event.tag_list.each do |tag| %>
      <span class="badge badge-primary">
        <%= link_to tag, events_path(tag_name: tag), class: "text-white" %>
      </span>
    <% end %>
  </div>
</div>
